<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7"
    android:fillViewport="true"
    tools:context=".AdminActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/scroll2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="124dp"
            android:layout_height="181dp"
            android:layout_marginTop="28dp"
            app:layout_constraintBottom_toTopOf="@+id/textView4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/imagenewui" />

        <Button
            android:id="@+id/viewData_but4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="#FFFFFF"
            android:fontFamily="@font/alata"
            android:onClick="resStockOnly"
            android:text="Reinitialiser le stock"
            android:textColor="#000000"
            android:textStyle="bold"
            app:barrierMargin="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewData_but3" />

        <Button
            android:id="@+id/viewData_but3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="#FFFFFF"
            android:fontFamily="@font/alata"
            android:onClick="resDDB"
            android:text="Reinitialiser la base de données"
            android:textColor="#000000"
            android:textStyle="bold"
            app:barrierMargin="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewData_but2" />

        <Button
            android:id="@+id/viewData_but2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:backgroundTint="#FFFFFF"
            android:fontFamily="@font/alata"
            android:onClick="vider_ddb"
            android:text="Vider la base de donnée"
            android:textColor="#000000"
            android:textStyle="bold"
            app:barrierMargin="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <EditText
            android:id="@+id/update_id"
            android:layout_width="140dp"
            android:layout_height="52dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:fontFamily="@font/alata"
            android:hint="Update ID : ID"
            android:inputType="number"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <Button
            android:id="@+id/update_requester"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="50dp"
            android:backgroundTint="#FFFFFF"
            android:fontFamily="@font/alata"
            android:onClick="update_req"
            android:text="->"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/create_requester" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="140dp"
            android:layout_height="52dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/alata"
            android:gravity="center_vertical"
            android:text="Create Requester"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewData_but" />

        <Button
            android:id="@+id/create_requester"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="53dp"
            android:layout_marginEnd="50dp"
            android:backgroundTint="#FFFFFF"
            android:fontFamily="@font/alata"
            android:onClick="create_req"
            android:text="->"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewData_but" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="50dp"
            android:backgroundTint="#FFFFFF"
            android:fontFamily="@font/alata"
            android:onClick="delete_user"
            android:text="delete"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/update_requester" />

        <EditText
            android:id="@+id/delete_id"
            android:layout_width="140dp"
            android:layout_height="52dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:fontFamily="@font/alata"
            android:hint="Delete User : ID"
            android:inputType="number"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/update_id" />

        <Button
            android:id="@+id/viewData_but"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="#FFFFFF"
            android:fontFamily="@font/alata"
            android:text="View List of Clients"
            android:textColor="#000000"
            android:textStyle="bold"
            app:barrierMargin="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewData_but4" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="371dp"
            android:layout_height="133dp"
            android:layout_marginTop="200dp"
            android:fontFamily="@font/alata"
            android:text="Admin User Interface"
            android:textAlignment="center"
            android:textSize="40sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/logoutbutton_id4"
            android:layout_width="123dp"
            android:layout_height="61dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="64dp"
            android:layout_marginBottom="30dp"
            android:background="#FFFFFF"
            android:backgroundTint="#FFFFFF"
            android:fontFamily="@font/alata"
            android:foregroundTint="#000000"
            android:onClick="logout"
            android:shadowColor="#000000"
            android:text="Logout"
            android:textColor="#000000"
            android:textColorLink="#000000"
            android:textStyle="bold"
            app:barrierMargin="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/delete_id" />

        <Button
            android:id="@+id/logoutbutton_id5"
            android:layout_width="123dp"
            android:layout_height="61dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="30dp"
            android:background="#FFFFFF"
            android:backgroundTint="#FFFFFF"
            android:fontFamily="@font/alata"
            android:foregroundTint="#000000"
            android:onClick="goBack"
            android:shadowColor="#000000"
            android:text="Go back"
            android:textColor="#000000"
            android:textColorLink="#000000"
            android:textStyle="bold"
            app:barrierMargin="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/delete_id" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>